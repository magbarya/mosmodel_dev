MODULE_NAME := $(EXTRA_SLIDING_WINDOW_MODULE_NAME)/window_$(EXTRA_SLIDING_WINDOW_WEIGHT)

include $(EXPERIMENTS_TEMPLATE)

$(LAYOUT_FILES): WEIGHT := $(EXTRA_SLIDING_WINDOW_WEIGHT)
$(LAYOUT_FILES): $(EXTRA_HOT_REGION_FILE) $(MEMORY_FOOTPRINT_FILE)
	mkdir -p $(dir $@)
	$(CREATE_SLIDING_WINDOW_LAYOUTS) \
		--weight=$(WEIGHT) \
		--memory_footprint=$(MEMORY_FOOTPRINT_FILE) \
		--hot_region=$(HOT_REGION_FILE) \
		--num_layouts=$(NUM_LAYOUTS) \
		--output=$(dir $@)/..

$(EXTRA_SLIDING_WINDOW_MODULE_NAME): $(MODULE_NAME)
$(EXTRA_SLIDING_WINDOW_MODULE_NAME)/clean: $(MODULE_NAME)/clean

